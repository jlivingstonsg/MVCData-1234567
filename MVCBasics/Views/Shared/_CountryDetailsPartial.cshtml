@model MVCBasics.Models.CreateCountryViewModel

<div>
    <h4>City Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <h4>Cities In This Country</h4>
    <div id="PersonTable" class="table">
        <div>
            <hr />
            <div class="row">
                <div class="col-sm-2">
                    ID
                </div>
                <div class="col-sm-2">
                    Name
                </div>
            </div>
        </div>
        @*Showing Table Data with Partial View Using Razor*@
        @{
            @foreach (var item in Model.City)
            {
                <partial name="_CityPartial" model="item" />
            }
        }
    </div>
</div>
