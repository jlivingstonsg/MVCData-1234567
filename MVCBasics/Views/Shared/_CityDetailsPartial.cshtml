@model MVCBasics.Models.CreateCityViewModel

<div>
    <h4>City Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.Name)
        </dd>
    </dl>
    <h4>People Living In This City</h4>
    <div id="PersonTable" class="table">
        <div>
            <hr />
            <div class="row">
                <div class="col-sm-2">
                    ID
                </div>
                <div class="col-sm-2">
                    Name
                </div>
                <div class="col-sm-2">
                    PhoneNumber
                </div>
                <div class="col-sm-2">
                    City
                </div>
            </div>
        </div>
        @*Showing Table Data with Partial View Using Razor*@
        @{
            var index = 0;
            @foreach (var item in Model.People)
            {
                <partial name="_Person" model="item" />
                index++;
            }
        }
    </div>
</div>
